<UserControl x:Class="PresentationLayer.Views.BudgetResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{Binding PageColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2">
            <RadioButton GroupName="" VerticalContentAlignment="Center" Foreground="{Binding TextColor}" FontSize="17" >Produkt</RadioButton>
            <RadioButton GroupName="" VerticalContentAlignment="Center" Foreground="{Binding TextColor}" FontSize="17" >Produktgrupp</RadioButton>
            <RadioButton GroupName="" VerticalContentAlignment="Center" Foreground="{Binding TextColor}" FontSize="17" >Avdelning</RadioButton>
            <RadioButton GroupName="" VerticalContentAlignment="Center" Foreground="{Binding TextColor}" FontSize="17" >Kontoret</RadioButton>
        </StackPanel>

        <!-- Lägg in bindings för itemsource osv i listboxen-->
        <ListBox Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,20,0,20">
            Lista med tex produkter, baserat på val ovan
        </ListBox>

        <!-- Lägg in bindings för textblock 1 baserat på val i listan ovan-->
        <TextBlock Text="(Visa val i listan)" Foreground="{Binding TextColor}" FontSize="17" Grid.Column="1" Grid.Row="3" />
        <TextBlock Text="Intäkter" Foreground="{Binding TextColor}" FontSize="17" Grid.Column="1" Grid.Row="4" />
        <TextBlock Text="Kostnader" Foreground="{Binding TextColor}" FontSize="17" Grid.Column="1" Grid.Row="5" />
        <Line Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="2" X1="0" X2="250" Stroke="{Binding TextColor}" StrokeThickness="2"/>
        <TextBlock Text="Resultat" Foreground="{Binding TextColor}" FontSize="17" Grid.Column="1" Grid.Row="7"/>

        <!-- Lägg in bindings för intäkter, kostnader och resultat-->
        <TextBlock Text="(Binda)" HorizontalAlignment="Right" Foreground="{Binding TextColor}" FontSize="17" Grid.Column="2" Grid.Row="4"/>
        <TextBlock Text="(Binda)" HorizontalAlignment="Right" Foreground="{Binding TextColor}" FontSize="17" Grid.Column="2" Grid.Row="5"/>
        <TextBlock Text="(Binda)" HorizontalAlignment="Right" Foreground="{Binding TextColor}" FontSize="17" Grid.Column="2" Grid.Row="7"/>

        <Button Content="Skriv ut" Grid.Column="1" Grid.Row="8" FontSize="17" Width="80" Margin="0,20,0,0" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Button Content="Exportera" Grid.Column="2" Grid.Row="8" FontSize="17" Width="80" Margin="0,20,0,0" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

    </Grid>

</UserControl>
